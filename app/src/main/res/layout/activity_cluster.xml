<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClusterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cluster_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cluster_columnCluster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cluster_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:text="@string/fruitlet_columnCluster" />

    <TextView
        android:id="@+id/cluster_columnCounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cluster_toolbar"
        app:layout_constraintStart_toEndOf="@id/cluster_columnCluster"
        android:layout_marginLeft="10dp"
        android:text="@string/cluster_columnCounts" />

    <TextView
        android:id="@+id/cluster_columnTreesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cluster_toolbar"
        app:layout_constraintStart_toEndOf="@id/cluster_columnCounts"
        android:layout_marginLeft="150dp"
        android:text="Trees PH" />

    <TextView
        android:id="@+id/cluster_columnS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cluster_toolbar"
        app:layout_constraintStart_toEndOf="@id/cluster_columnTreesCount"
        android:layout_marginLeft="10dp"
        android:text="S PH" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/cluster_columnCluster" />

</androidx.constraintlayout.widget.ConstraintLayout>